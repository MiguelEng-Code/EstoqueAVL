            <effect>
                <DropShadow offsetY="5.0" radius="20.0" width="30.0">
                    <color>
                        <Color opacity="0.1" />
                    </color>
                </DropShadow>
            </effect>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="256.0">
                            <children>
                                <Label text="Gerenciar Estoque" textFill="#2c3e50">
                                    <font>
                                        <Font name="Segoe UI Bold" size="25.0" />
                                    </font>
                                </Label>
                                <Label text="Visualize, busque ou remova itens" textFill="#4f5656">
                                    <font>
                                        <Font name="Segoe UI" size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <VBox HBox.hgrow="ALWAYS" />

                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <TextField fx:id="campoBusca" prefHeight="40.0" prefWidth="200.0" promptText="Digite o ID..." style="-fx-background-radius: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 20; -fx-padding: 0 15;">
                                    <font>
                                        <Font name="Segoe UI" size="16.0" />
                                    </font>
                           <cursor>
                              <Cursor fx:constant="TEXT" />
                           </cursor>
                                </TextField>
                                <Button fx:id="btnPesquisar" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2980B9; -fx-background-radius: 20;" text="ðŸ” Buscar" textFill="WHITE">
                                    <font>
                                        <Font name="Segoe UI Bold" size="16.0" />
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>

                <TableView fx:id="tabelaProdutos" cache="true" cacheHint="QUALITY" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: #ecf0f1; -fx-border-radius: 5;" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="75.0" style="-fx-alingment: CENTER;" text="ID" />
                        <TableColumn fx:id="colNome" prefWidth="250.0" style="-fx-alingment: CENTER;" text="Nome do Produto" />
                        <TableColumn fx:id="colPreco" prefWidth="120.0" style="-fx-alingment: CENTER;" text="PreÃ§o (R$)" />
                        <TableColumn fx:id="colQtd" prefWidth="100.0" style="-fx-alingment: CENTER;" text="Qtd." />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button fx:id="btnVoltarMenu" mnemonicParsing="false" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #2980B9; -fx-background-radius: 8;" text="â¬… Voltar ao Menu" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="14.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnExcluir" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #C0392B; -fx-background-radius: 8;" text="ðŸ—‘ Excluir Selecionado" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="14.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <effect>
                                <DropShadow offsetY="2.0" radius="5.0" width="10.0">
                                    <color>
                                        <Color opacity="0.2" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
