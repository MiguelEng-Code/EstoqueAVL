<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F4F6F8;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.miguel.estoqueavl.controller.BuscaController">

